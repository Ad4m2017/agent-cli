{
  "version": 1,
  "runtime": {
    "defaultProvider": "copilot",
    "defaultModel": "copilot/gpt-5-mini",
    "profile": "dev",
    "defaultApprovalMode": "auto",
    "defaultToolsMode": "auto",
    "commandTimeoutMs": 10000,
    "approvalTimeoutMs": 0,
    "allowInsecureHttp": false,
    "systemPrompt": "",
    "attachments": {
      "maxFileBytes": 0,
      "maxImageBytes": 0,
      "maxFiles": 0,
      "maxImages": 0
    },
    "usageStats": {
      "enabled": false,
      "file": ".agent-usage.ndjson",
      "retentionDays": 90,
      "maxBytes": 5242880
    }
  },
  "security": {
    "denyCritical": [
      "rm -rf /",
      "mkfs",
      "shutdown",
      "reboot",
      "poweroff",
      "dd if=",
      "re:curl\\s+.*\\|\\s*(sh|bash)",
      "re:wget\\s+.*\\|\\s*(sh|bash)"
    ],
    "modes": {
      "safe": {
        "allow": [
          "pwd",
          "ls",
          "whoami",
          "date",
          "git status",
          "git branch",
          "git diff",
          "git log",
          "node -v",
          "npm -v"
        ],
        "deny": [
          "rm",
          "sudo",
          "chmod",
          "chown",
          "mv",
          "cp",
          "docker",
          "npm install",
          "git push"
        ]
      },
      "dev": {
        "allow": [
          "pwd",
          "ls",
          "whoami",
          "date",
          "git",
          "node",
          "npm",
          "pnpm",
          "yarn",
          "bun",
          "python",
          "pytest",
          "go",
          "cargo",
          "make",
          "docker",
          "curl"
        ],
        "deny": [
          "rm",
          "sudo",
          "shutdown",
          "reboot",
          "mkfs",
          "chown"
        ]
      },
      "framework": {
        "allow": [
          "*"
        ],
        "deny": [
          "rm -rf /",
          "mkfs",
          "shutdown",
          "reboot",
          "poweroff"
        ]
      }
    }
  }
}
